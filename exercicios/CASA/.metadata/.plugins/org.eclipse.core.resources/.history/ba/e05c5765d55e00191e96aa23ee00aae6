import java.util.Scanner;

public class Calculos {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double numero1;
		double numero2;
		double numero3;
		double numero4;
		double multiplica;
		double soma;
		Scanner scn = new Scanner(System.in);
		System.out.println("Digite 4 (Quatro numeros)");
		numero1 = scn.nextDouble();
		numero2 = scn.nextDouble();
		numero3 = scn.nextDouble();
		numero4 = scn.nextDouble();
		multiplica = numero1 * numero3;
		soma = numero2 + numero4;
		System.out.println("Numeros 1 e 2 Multiplicado é " + multiplica);
		System.out.println("Numeros 3 e 4 somado é " + soma);
	}

}
